{
  "compilerOptions": {
    "sourceMap": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "target": "ES6",
    "module": "ESNext",
    "baseUrl": "src",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}